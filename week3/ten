import java.util.*;
public class week3_ten {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int ev = 0;
        int od = 0;
        int a;
                
        while (true){
            a = sc.nextInt();
            if (a == -1){
                break;
            }
            
            if (a % 2 == 0){
                ev++;
            } else {
                od++;
            }
        }    
            System.out.print("Odd number = " + od);
            System.out.println(" and Even number = " + ev);
            
    }
}
